<p id="notice"><%= notice %></p>
<h1>My Blog</h1>
<% @posts.each do |post| %>
	<h2><%= post.title %></h2>
	<p><%= post.content %></p>
	<p><%= link_to "Show",
			post %>  
		<%= link_to "Edit", edit_post_path(post) %>
		<%= link_to "Destroy", post,
			method: :delete,
			data: {confirm: 'Are you sure?'} %>
	</p>
	<small><%= post.created_at %></small>
<% end %>